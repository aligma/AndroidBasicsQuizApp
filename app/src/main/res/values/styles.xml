<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="QuestionAndAnswerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="QuestionTextStyle" parent="QuestionAndAnswerTextStyle"></style>

    <style name="AnswerTextStyle" parent="QuestionAndAnswerTextStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AnswerRadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AnswerCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FoodPhoto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="QuestionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
